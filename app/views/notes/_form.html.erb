<%= form_with(model: note, url: post_url, :data => {:turbo => "false"} ) do |f| %>
  <%= render 'shared/error_messages', resource: note %>
  <div class="field form-group pb-1">
    <%= f.label "Folder" %>
      <%= f.collection_select :folder_id, @cabinet.folders, :id, :title,  
        {}, {class: "form-select"}  %>
  </div>
  <div class="field form-group pb-2">
    <%= f.label "title" %>
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.text_area :content, class: "tinymce", rows: 15 %>
    <%= tinymce %>
  </div>
  <div class="actions pt-2">
    <%= f.submit class: "btn btn-sm btn-outline-dark" %>
  </div>
<% end %>