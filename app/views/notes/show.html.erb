<% provide(:title, "Show Note") %>

<div class="row mx-0 my-0">
  <div class="col col-md-auto mx-0 px-0 py-0 my-0">
    <%= render "sidebar" %>
  </div>
  <div class="col">
    <div class="container py-2">
      <div class="card mb-2 shadow-lg rounded border">
        <div class="card-body text-dark">
          <h3 class="card-title"><%= @note.title %></h3>
          <p class="card-text">
            <% unless @note.content.blank? %>
              <%= @note.content.html_safe %>
            <% end %>
         </p>
          <div class="btn-group">
            <%= link_to edit_note_path(@note), class: "btn btn-sm btn-outline-dark", :data => {:turbo => "false"} do %> 
              <i class="bi bi-pencil pe-1"></i>Edit
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
