<% provide(:title, "New User") %>

<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h3 class="card-title"><%= "New User for: #{@account.name}" %></h3>
      <p class="card-text">
        <%= render "users/form",  user: @user, path_for_user: account_users_path(@account) %>
      </p>
      <div class="btn-group">
        <%= link_to account_users_path(@account), class: "btn btn-sm btn-outline-dark" do %> 
          <i class="bi bi-people pe-1"></i>All users
        <% end %>
      </div>

    </div>
  </div>
</div>
