<% provide(:title, "Edit User") %>

<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h3 class="card-title"><%= "Edit User for: #{@account.name}" %></h3>
      <p class="card-text">
        <%= render "users/form",  user: @user, path_for_user: user_path(@user) %>
      </p>
      <div class="btn-group">
        <%= link_to account_users_path(@account), class: "btn btn-sm btn-outline-dark" do %> 
          <i class="bi bi-people pe-1"></i>All users
        <% end %>
        <%= link_to account_users_path(@account), class: "btn btn-sm btn-outline-dark" do %> 
          <i class="bi bi-arrow-counterclockwise pe-1"></i>Reset Password
        <% end %>
        <% if !@user.owner %>
          <%= button_to user_path(@user), class: 'btn btn-sm btn-outline-dark', form: {data: {turbo_confirm: 'Are you sure??'}}, method: :delete do %>
             <i class="bi bi-trash pe-1"></i>Delete
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
