<% provide(:title, "Users") %>

<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <div class="row">
        <div class="col-md-auto">
          <h3 class="card-title"><%= "#{@account.name}: Users" %></h3>
        </div>
        <div class="col">
          <div class="btn-group p-2">
            <%= link_to new_account_user_path(@account), class: "btn btn-sm btn-outline-dark" do %>
              <i class="bi bi-person-circle pe-1"></i>New User
            <% end %>
          </div>
        </div>
      </div>
      <p class="card-text">
        <%= render "users/listing",  users: @account.users %>
      </p>
    </div>
  </div>
</div>
