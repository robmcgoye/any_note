<% provide(:title, "Users") %>
<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">

      <p class="card-text">
        <%= render "accounts/form",  account: @account %>
      </p>
      <div class="btn-group">
        <%= link_to account_path(@account), class: "btn btn-sm btn-outline-dark" do %> 
          <i class="bi bi-box-arrow-in-right pe-1"></i>View
        <% end %>
            <%= button_to account_path(@account), class: "btn btn-sm btn-outline-dark", form: {data: {turbo_confirm: 'Are you sure? This will delete ALL notes, users!'}}, method: :delete do %>
              <i class="bi bi-trash"></i>Close Account
            <% end %>
      </div>


    </div>
  </div>
</div>
