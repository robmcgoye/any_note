
<% provide(:title, "Edit Cabinet") %>
<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h3 class="card-title">Edit Cabinet</h3>
      <p class="card-text">
        <%= render "form", cabinet: @cabinet, post_url: cabinet_path(@cabinet), new_cabinet: false  %>
      </p>
      <div class="btn-group">
        <%= link_to back_to_cabinet_path(@cabinet.id), class: "btn btn-sm btn-outline-dark" do %> 
          <i class="bi bi-box-arrow-in-right pe-1"></i>Back
        <% end %>
        <%= button_to cabinet_path(@cabinet), class: "btn btn-sm btn-outline-dark", form: {data: {turbo_confirm: 'Are you sure?'}}, method: :delete do %>
          <i class="bi bi-trash"></i>Delete
        <% end %>
      </div>

    </div>
  </div>
</div>
