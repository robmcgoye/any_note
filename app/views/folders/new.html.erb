<% provide(:title, "New Folder") %>

<div class="row mx-0 my-0">
  <div class="col col-md-auto mx-0 px-0 py-0 my-0">
    <%= render "shared/sidebar", this_cabinet: @cabinet, folder_id: 0, note_id: 0 %>
  </div>
  <div class="col">
    <div class="container py-2">
      <div class="card mb-2 shadow-lg rounded border">
        <div class="card-body text-dark">
          <h3 class="card-title">New Folder in <i><%= @cabinet.name %></i></h3>
          <p class="card-text">
            <%= render "form", folder: @folder, post_url: cabinet_folders_path(@cabinet)  %>
          </p>
          <div class="btn-group p-2">
            <%= link_to back_to_cabinet_path(@cabinet.id), class: "btn btn-sm btn-outline-dark" do %> 
              <i class="bi bi-box-arrow-in-right pe-1"></i>Back
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
