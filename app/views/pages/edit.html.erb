<div class="container">
<h3><%= @page.name.capitalize %></h3>
<%= form_with(model: @page, :data => {:turbo => "false"}) do |form| %>
  <%= render "shared/error_messages", resource: @page %>

  <div class="field form-group">
    <%= form.text_area :body, class: "tinymce", rows: 20 %>
    <%= tinymce %>
  </div>

  <div class="actions pt-2">
    <%= form.submit "Update", class: "btn btn-sm btn-outline-secondary" %>
  </div>
<% end %>
</div>
